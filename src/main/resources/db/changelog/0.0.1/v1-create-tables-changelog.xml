<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="v1-1" author="Andrii Sereda">
        <createTable tableName="companies">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="working_cars_amount" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset for creating the 'taxi_drivers' table -->
    <changeSet id="v1-2" author="Andrii Sereda">
        <createTable tableName="taxi_drivers">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_taxi_drivers_company" references="companies(id)"/>
            </column>
            <column name="age" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="driving_experience" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="cars" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
